
<h2>Send Code Again</h2>

<form action="/auth/resend" method="POST" id="form-container">
  <label for="email">email</label>
  <input id="email" type="text" name="email" placeholder="John@doe.es">
  
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Send</button>

  <p class="account-message">
    Don't have an account yet?
    <a href="/auth/signup">Signup</a>
  </p>
</form>
