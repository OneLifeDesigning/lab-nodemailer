<div class="row">
  <div class="col-12 col-md-6 offset-md-3">
    <h2>Signup</h2>
    <form action="/auth/signup" method="POST" id="form-container">
      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" id="username" type="text" name="username" placeholder="JonSnow">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" id="email" type="text" name="email" placeholder="john@doe.com">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" id="password" type="password" name="password" placeholder="Your password">
      </div>

      {{#if message }}
        <div class="alert alert-warning">{{ message }}</div>
      {{/if}}


      <button class="btn btn-primary float-left mr-4">
        Signup
      </button>

      <p class="account-message">
        Do you already have an account?
        <a href="/auth/login">Login</a>
      </p>
    </form>
  </div>
</div>