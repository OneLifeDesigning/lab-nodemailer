
<div class="row">
  <div class="col-12 col-md-6 offset-md-3">
    <h2>Login</h2>

    <form action="/auth/login" method="POST" id="form-container">
      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" id="username" type="text" name="username" placeholder="JonSnow">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" id="password" type="password" name="password" placeholder="Your password">
      </div>

      {{#if message }}
        <div class="alert alert-warning">{{ message }}</div>
      {{/if}}


      <button class="btn btn-primary float-left mr-4">
        Login
      </button>

      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </form>
  </div>
</div>

